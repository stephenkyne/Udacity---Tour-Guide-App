<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        TextView on list items, Venues being displayed in the fragments
    -->
    <style name="list_text_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--
        TextView, used to divide different areas of the activity_details.xml
    -->
    <style name="bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#003F2D</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!--
        Text at the bottom of the activity_details.xml file
        Text between two icons, 1, icon related to the text
        2, icon to cope the text.
    -->
    <style name="sub_text_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--
        style the ImageView that holds the "copy" icons
    -->
    <style name="copy_icon_imageview">
        <item name="android:src">@drawable/baseline_content_copy_black_24</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <!-- Defind the large Icons and text in the activity_details.xml-->
    <style name="icon_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--
        Used by the large, highest Icons in their own sub layouts.
        displays ImageView with Icons, call, share, public (website) and direction icons
        displays TextViews with related text to the icon, re, "call"
    -->
    <style name="icon_layouts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Main Text style -->
    <style name="main_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Text below the icons -->
    <style name="icon_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- Icons with a logo of type of information the follow is
        // e.g. call icon followed by a telephone number
     -->
    <style name="small_icon_before_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <!-- Default style used but none main layouts
        both LinearLayout and RelativeLayout
        NOT used by the large, highest Icons in their own sub layouts.
     -->
    <style name="default_sub_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>
